-- list of directories (separated by spaces) to import files, besides current one
import-directories
  = "." .

-- write Cedille spans to ./.cedille/file.cede
use-cede-files
  = false.

-- compile Cedille source to Racket
-- currently not supported
make-rkt-files
  = false.

generate-logs
  = false.

-- show fully-qualified variables (for debugging)
show-qualified-vars
  = false.

-- Erase erasable expressions from terms occurring in types (for debugging)
erase-types = true.

