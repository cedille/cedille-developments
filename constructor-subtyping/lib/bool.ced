module bool.

data Bool : ★ =
  | tt : Bool
  | ff : Bool.

and : Bool ➔ Bool ➔ Bool
= λ a. λ b. σ a {
  | tt ➔ σ b {
    | tt ➔ tt
    | ff ➔ ff
    }
  | ff ➔ σ b {
    | tt ➔ ff
    | ff ➔ ff
    }
  }.

or : Bool ➔ Bool ➔ Bool
= λ a. λ b. σ a {
  | tt ➔ σ b {
    | tt ➔ tt
    | ff ➔ tt
    }
  | ff ➔ σ b {
    | tt ➔ tt
    | ff ➔ ff
    }
  }.

iff : Bool ➔ Bool ➔ Bool
= λ a. λ b. σ a {
  | tt ➔ σ b {
    | tt ➔ tt
    | ff ➔ ff
    }
  | ff ➔ σ b {
    | tt ➔ ff
    | ff ➔ tt
    }
  }.

negate : Bool ➔ Bool
= λ a. σ a {
  | tt ➔ ff
  | ff ➔ tt
  }.
